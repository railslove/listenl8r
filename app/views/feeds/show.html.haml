= form_for Bookmark.new, :url => feed_bookmarks_path(@feed), :html => {:class => "form-horizontal"} do |f|
  .control-group
    = f.label :title, "File Title", :class => "control-label"
    .controls
      = f.text_field :title, :placeholder => "Podcast Episode 23 (optional)"
  .control-group
    = f.label :location, "File URL", :class => "control-label"
    .controls
      = f.text_field :location, :placeholder => "http://example.com/podcast.mp3"
  .control-group
    .controls
      %button.btn{:type => "submit"} Add to feed

- if @bookmarks.any?
  %hr
  %ul
    - @bookmarks.each do |bookmark|
      %li
        = bookmark.title
        &mdash;
        = link_to bookmark.location, bookmark.location
